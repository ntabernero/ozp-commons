<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.0.0"
           xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.0.0"
           default-activation="lazy">

    <bean id="groupRepositoryImpl" class="org.ozoneplatform.commons.server.persistence.jpa.GroupRepositoryImpl">
        <tx:transaction method="*" value="Required"/>
        <jpa:context property="entityManager" unitname="ozppu"/>
    </bean>

    <bean id="personRepositoryImpl" class="org.ozoneplatform.commons.server.persistence.jpa.PersonRepositoryImpl">
        <tx:transaction method="*" value="Required"/>
        <jpa:context property="entityManager" unitname="ozppu"/>
    </bean>

    <bean id="stackRepositoryImpl" class="org.ozoneplatform.commons.server.persistence.jpa.StackRepositoryImpl">
        <tx:transaction method="*" value="Required"/>
        <jpa:context property="entityManager" unitname="ozppu"/>
    </bean>

    <bean id="widgetDefinitionRepositoryImpl" class="org.ozoneplatform.commons.server.persistence.jpa.WidgetDefinitionRepositoryImpl">
        <tx:transaction method="*" value="Required"/>
        <jpa:context property="entityManager" unitname="ozppu"/>
    </bean>

    <service ref="groupRepositoryImpl" interface="org.ozoneplatform.commons.server.persistence.api.GroupRepository"/>
    <service ref="personRepositoryImpl" interface="org.ozoneplatform.commons.server.persistence.api.PersonRepository"/>
    <service ref="stackRepositoryImpl" interface="org.ozoneplatform.commons.server.persistence.api.StackRepository"/>
    <service ref="widgetDefinitionRepositoryImpl" interface="org.ozoneplatform.commons.server.persistence.api.WidgetDefinitionRepository"/>

</blueprint>